{
  "compilerOptions": {
    "module": "es6",
    "strict": false,
    "target": "ES2019",
    "lib": ["ES6", "DOM", "ES2019"],
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "paths": {
      // 指定模块的路径，和baseUrl有关联，和webpack中resolve.alias配置一样
      "src": [
        //指定后可以在文件之直接 import * from 'src';
        "./src"
      ]
    }
  },
  "include": ["./src/**/*"]
}
